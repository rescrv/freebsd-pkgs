meta_deps = []
max_version = 0

for p in Package:
    p.write_port()
    max_version = max(max_version, p.version)
    meta_deps.append(p.name)

meta = Package('all', max_version)
for d in meta_deps:
    meta.depends_upon('rescrv/%s' % d, 'rescrv-%s' % d)
meta.write_port()
